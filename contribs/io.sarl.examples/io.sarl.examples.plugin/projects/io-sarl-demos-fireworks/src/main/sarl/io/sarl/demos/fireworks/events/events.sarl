package io.sarl.demos.fireworks.events

/** Trigger the launching area for starting the demo.
 *
 * @author $Author: abartuccio$
 * @author $Author: ngaud$
 */
event Launch

/** Setup the Area.
 *
 * @author $Author: abartuccio$
 * @author $Author: ngaud$
 */
event CreateArea

/** Make a rocket explode.
 *
 * @author $Author: abartuccio$
 * @author $Author: ngaud$
 */
event Explode

/** Ask a rocket to kill itself.
 *
 * @author $Author: abartuccio$
 * @author $Author: ngaud$
 */
event KillRocket

/** Ask a fire to kill itself.
 *
 * @author $Author: abartuccio$
 * @author $Author: ngaud$
 */
event KillFire

/** Say that a rocket is ready.
 *
 * @author $Author: abartuccio$
 * @author $Author: ngaud$
 */
event RocketReady

/** Trigger a rocket to update it's position.
 *
 * @author $Author: abartuccio$
 * @author $Author: ngaud$
 */
event UpdateRocketPosition

/** Trigger a fire to update it's position.
 *
 * @author $Author: abartuccio$
 * @author $Author: ngaud$
 */
event UpdateFirePosition

/** Say that a fire is ready.
 *
 * @author $Author: abartuccio$
 * @author $Author: ngaud$
 */
event FireReady

/** Makes a fire spray everywhere.
 *
 * @author $Author: abartuccio$
 * @author $Author: ngaud$
 */
event SprayFire

/** Carry all setup informations, send by the GUI.
 *
 * @author $Author: abartuccio$
 * @author $Author: ngaud$
 */
event SetupSettings {
	val rocketsQuantity : int
	val fireQuatity : int
	val gravity : double
	val maxWidth : double

	new(rq : int, fq : int, grav : double, max : double) {
		rocketsQuantity = rq
		fireQuatity = fq
		gravity = grav
		maxWidth = max
	}

}

/** Freeze signal send by the GUI.
 *
 * @author $Author: abartuccio$
 * @author $Author: ngaud$
 */
event Freeze {
	val value : boolean

	new (value : boolean) {
		this.value = value
	}

}
