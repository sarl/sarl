package io.sarl.sre.test.framework

import java.util.logging.Level

/*
 * Constants for testing SRE.
 *
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 * @since 0.11
 */
final class Constants {

	private new {
	}

	/** Veru short timeout in seconds.
	 * 
	 * @see #SHORT_TIMEOUT
	 * @see #EXTRA_TIMEOUT
	 * @see #NO_TIMEOUT
	 * @see #STANDARD_TIMEOUT
	 * @since 0.11
	 */
	public static val VERY_SHORT_TIMEOUT = 2

	/** Short timeout in seconds.
	 * 
	 * @see #VERY_SHORT_TIMEOUT
	 * @see #EXTRA_TIMEOUT
	 * @see #NO_TIMEOUT
	 * @see #STANDARD_TIMEOUT
	 */
	public static val SHORT_TIMEOUT = 10

	/** Standard timeout in seconds.
	 * 
	 * @see #VERY_SHORT_TIMEOUT
	 * @see #EXTRA_TIMEOUT
	 * @see #NO_TIMEOUT
	 * @see #SHORT_TIMEOUT
	 */
	public static val STANDARD_TIMEOUT = 20

	/** Extra timeout in seconds.
	 * 
	 * @see #VERY_SHORT_TIMEOUT
	 * @see #STANDARD_TIMEOUT
	 * @see #NO_TIMEOUT
	 * @see #SHORT_TIMEOUT
	 */
	public static val EXTRA_TIMEOUT = 60

	/** No timeout.
	 * 
	 * @see #VERY_SHORT_TIMEOUT
	 * @see #STANDARD_TIMEOUT
	 * @see #EXTRA_TIMEOUT
	 * @see #SHORT_TIMEOUT
	 */
	public static val NO_TIMEOUT = -1

	/** The logging level when logging is enable during tests.
	 */
	public static val TEST_LOGGING_LEVEL = Level::INFO

	/** Time to consider before doing a differed kill.
	 */
	public static val DIFFERED_KILLING_DURATION = 1000

}
