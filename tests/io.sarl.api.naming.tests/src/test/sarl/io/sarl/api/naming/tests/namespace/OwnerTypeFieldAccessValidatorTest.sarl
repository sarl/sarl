import static extension io.sarl.tests.api.tools.TestMockito.mock
import static extension org.junit.jupiter.api.Assertions.*

/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
@ExtendWith(#[
	typeof(ContextInitExtension),
	typeof(JavaVersionCheckExtension)
])
@DisplayName("OwnerTypeFieldAccessValidator")
@Tag("unit")
@Tag("api")
@Tag("api-naming")
class OwnerTypeFieldAccessValidatorTest {

	@Nullable
	var validator : OwnerTypeFieldAccessValidator

	@BeforeEach
	def setUp : void {
		this.validator = new OwnerTypeFieldAccessValidator
	}

	@Test
	@DisplayName("getFieldAccessRight(Agent, f)")
	def getFieldAccessRight_Agent : void {
		FieldAccessRight::NONE.assertSame(this.validator.getFieldAccessRight(typeof(Agent).mock, null))
	}

	@Test
	@DisplayName("getFieldAccessRight(Behavior, f)")
	def getFieldAccessRight_Behavior : void {
		FieldAccessRight::NONE.assertSame(this.validator.getFieldAccessRight(typeof(Behavior).mock, null))
	}

	@Test
	@DisplayName("getFieldAccessRight(Skill, f)")
	def getFieldAccessRight_Skill : void {
		FieldAccessRight::NONE.assertSame(this.validator.getFieldAccessRight(typeof(Skill).mock, null))
	}

	@Test
	@DisplayName("getFieldAccessRight(AgentTrait, f)")
	def getFieldAccessRight_AgentTrait : void {
		FieldAccessRight::NONE.assertSame(this.validator.getFieldAccessRight(typeof(AgentTrait).mock, null))
	}

	@Test
	@DisplayName("getFieldAccessRight(Context, f)")
	def getFieldAccessRight_Context : void {
		FieldAccessRight::WRITE.assertSame(this.validator.getFieldAccessRight(typeof(AgentContext).mock, null))
	}

	@Test
	@DisplayName("getFieldAccessRight(Space, f)")
	def getFieldAccessRight_Space : void {
		FieldAccessRight::WRITE.assertSame(this.validator.getFieldAccessRight(typeof(Space).mock, null))
	}

	@Test
	@DisplayName("getFieldAccessRight(Service, f)")
	def getFieldAccessRight_Service : void {
		FieldAccessRight::WRITE.assertSame(this.validator.getFieldAccessRight(typeof(Service).mock, null))
	}

}
