<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>io.sarl.demos</groupId>
    <artifactId>harms-demo</artifactId>
    <version>0.4.0-SNAPSHOT</version>

    <name>HARMS Demo of the SARL Agent Oriented Programming Language</name>
    <url>http://www.sarl.io/</url>
    <inceptionYear>2015</inceptionYear>

    <properties>
        <year>2015</year>
        <copyrighters>Sebastian RODRIGUEZ, Nicolas GAUD, St√©phane GALLAND</copyrighters>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <compiler.level>1.8</compiler.level>
        <sarl.version>0.4.0-SNAPSHOT</sarl.version>
        <janus.version>2.0.4.0-SNAPSHOT</janus.version>
        <xtext.version>2.10.0</xtext.version>
    </properties>

    <organization>
        <name>SARL Consortium</name>
        <url>http://www.sarl.io/</url>
    </organization>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <dependencies>
        <dependency>
            <groupId>io.janusproject</groupId>
            <artifactId>io.janusproject.kernel</artifactId>
            <version>${janus.version}</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.xtend</groupId>
            <artifactId>org.eclipse.xtend.lib</artifactId>
            <version>${xtext.version}</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/sarl</directory>
                <includes>
                    <include>**/*.sarl</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>io.sarl.maven</groupId>
                <artifactId>sarl-maven-plugin</artifactId>
                <version>${sarl.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <source>${compiler.level}</source>
                    <target>${compiler.level}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>local-release-repository</id>
            <url>file:///var/www/sarl-maven-repository/</url>
        </repository>
        <snapshotRepository>
            <id>local-repository</id>
            <url>file:///var/www/sarl-maven-repository/</url>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>io.sarl.maven</id>
            <name>Sarl.io Snapshots</name>
            <url>http://maven.sarl.io/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
        <repository>
            <id>io.janus-project.maven</id>
            <name>Janusproject.io Snapshots</name>
            <url>http://maven.janusproject.io</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>io.sarl.maven</id>
            <name>Sarl.io Snapshots</name>
            <url>http://maven.sarl.io/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </pluginRepository>
    </pluginRepositories>

</project>
