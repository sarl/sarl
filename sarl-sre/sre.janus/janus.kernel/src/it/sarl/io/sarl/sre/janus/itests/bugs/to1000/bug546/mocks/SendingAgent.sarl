package io.sarl.sre.janus.itests.bugs.to1000.bug546.mocks

import io.sarl.api.core.DefaultContextInteractions
import io.sarl.api.core.Initialize
import io.sarl.api.core.Lifecycle
import io.sarl.api.core.Schedules
import io.sarl.sre.test.framework.skills.TestingCapacity
import io.sarl.sre.test.framework.skills.TestingSkill
import java.util.UUID

import static io.sarl.sre.janus.itests.bugs.to1000.bug546.Constants.*

/**
 * @author $Author: sgalland$
 * @version janus.kernel 3.0.13.0 20230919-093058
 * @mavengroupid io.sarl.sre.janus
 * @mavenartifactid janus.kernel
 * @see https://github.com/sarl/sarl/issues/546
 */
agent SendingAgent {

	uses Schedules, Lifecycle, DefaultContextInteractions

	uses TestingCapacity

	@SuppressWarnings("io.sarl.lang.validation.IssueCodes.potential_inefficient_value_conversion")
	on Initialize {
		setSkill(new TestingSkill(occurrence))
		val parentID = agentInitializationParameters.get(1) as UUID
		in(500) [
			for (i : 0..<NB_EVENTS) {
				emit(new MyEvent) [it.ID == parentID]
			}
			killMe
		]
	}

}
