package io.sarl.sre.janus.itests.internal

import io.sarl.api.core.MemberJoined
import io.sarl.lang.core.SpaceID
import io.sarl.lang.tests.api.extensions.JavaVersionCheckExtension
import io.sarl.sre.janus.itests.internal.mocks.MySpawnedAgent2
import io.sarl.sre.janus.itests.internal.mocks.MyWaiterAgent2
import io.sarl.sre.test.framework.context.SreRunContext
import io.sarl.sre.test.framework.^extension.SreRunExtension
