package io.sarl.sre.janus.itests.services.executor.mocks

import io.sarl.api.core.Destroy
import io.sarl.api.core.Initialize
import io.sarl.api.core.Lifecycle
import io.sarl.api.core.Schedules
import io.sarl.sre.test.framework.skills.TestingCapacity
import io.sarl.sre.test.framework.skills.TestingSkill
import java.util.ArrayList

/**
 * @author $Author: sgalland$
 * @version janus.kernel 3.0.15.0 20250909-115749
 * @mavengroupid io.sarl.sre.janus
 * @mavenartifactid janus.kernel
 */
@SuppressWarnings("all")
agent CancelTaskAgent2 {
	
	uses Schedules, Lifecycle

	uses TestingCapacity

	on Initialize {
		setSkill(new TestingSkill(occurrence))
		var t1 = every(500)[]
		t1.name = "T1"
		addResult(new ArrayList(getActiveTasks))
		var t2 = in(1000) [
			killMe
		]
		t2.name = "T2"
		addResult(new ArrayList(getActiveTasks))
		var t3 = execute [
			while (true) {
				// this task never stops
				Thread::yield
			}
		]
		t3.name = "T3"
		addResult(new ArrayList(getActiveTasks))
		t1.cancel
		addResult(new ArrayList(getActiveTasks))
	}

	on Destroy {
		addResult(new ArrayList(getActiveTasks))
	}

}
