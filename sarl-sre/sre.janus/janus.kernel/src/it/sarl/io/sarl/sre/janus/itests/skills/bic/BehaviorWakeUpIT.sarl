package io.sarl.sre.janus.itests.skills.bic

import io.sarl.lang.tests.api.extensions.JavaVersionCheckExtension
import io.sarl.sre.janus.itests.skills.bic.mocks.BehaviorWakeUpAgent
import io.sarl.sre.janus.itests.skills.bic.mocks.BehaviorsWakeUpAgent
import io.sarl.sre.test.framework.context.SreRunContext
import io.sarl.sre.test.framework.^extension.SreRunExtension
import io.sarl.tests.api.extensions.ContextInitExtension
import io.sarl.tests.api.extensions.PropertyRestoreExtension
import org.junit.jupiter.api.DisplayName
import org.junit.jupiter.api.Tag
import org.junit.jupiter.api.Test
import org.junit.jupiter.api.^extension.ExtendWith

import static extension io.sarl.tests.api.tools.TestAssertions.*

/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
@ExtendWith(#[
	typeof(ContextInitExtension),
	typeof(JavaVersionCheckExtension),
	typeof(PropertyRestoreExtension),
	typeof(SreRunExtension)
])
@DisplayName("run: Specific behavior wake up")
@Tag("sre-run")
@Tag("janus")
class BehaviorWakeUpIT {

	@Test
	@DisplayName("behavior.wake(event)")
	def wakeUp(extension rc : SreRunContext) {
		typeof(BehaviorWakeUpAgent).runSre
		// No error should be logged
		rc.assertNoError(false)
		val r = allResults
		r.assertContains("wake-up-behavior-2")
	}

	@Test
	@DisplayName("behaviors.wake(event)")
	def wakeUps(extension rc : SreRunContext) {
		typeof(BehaviorsWakeUpAgent).runSre
		// No error should be logged
		rc.assertNoError(false)
		val r = allResults
		r.assertContains("wake-up-behavior-2", "wake-up-behavior-4")
	}

}
