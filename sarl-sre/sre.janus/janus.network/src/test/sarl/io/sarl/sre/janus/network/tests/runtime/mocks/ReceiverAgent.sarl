package io.sarl.sre.janus.network.tests.runtime.mocks

import io.sarl.api.core.Initialize
import io.sarl.sre.test.framework.skills.TestingCapacity
import io.sarl.sre.test.framework.skills.TestingSkill
import java.util.concurrent.atomic.AtomicInteger

/**
 * @author <a href="http://www.ciad-lab.fr/stephane_galland">St&eacute;phane Galland</a>
 * @version janus.network 3.0.13.0 20230919-093058
 * @mavengroupid io.sarl.sre.janus
 * @mavenartifactid janus.network
 */
agent ReceiverAgent {
	
	uses TestingCapacity
	
	val nb = new AtomicInteger(0)

	on Initialize {
		setSkill(new TestingSkill(occurrence))
	}

	on DataEvent {
		addResult(occurrence)
		val n = this.nb.incrementAndGet
		if (n >= TConstants::MAX) {
			killMeSoon
		}
	}
	
}
