package io.sarl.sre.extensions.simulation.agentenvironment.model

import io.sarl.sre.services.time.TimeService

/**
 * This interface represents a tool for applying the agent influences into the agent environment model.
 *
 * @param <B> the type of the agent bodies
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 * @since 0.12
 */
interface InfluenceApplier<B extends AgentBody> {

	/** Reset any internal buffer. */
	def reset

	/** Prepare for the removal of a body
	 *
	 * @param body the body to remove.
	 * @param segment the segment from which the body be removed.
	 */
	def prepareRemoval(body : B)

	/** Remove the given body
	 * 
	 * @param body the body to remove.
	 */
	def remove(body : B)

	/** Do any task for finalizing the influence application.
	 *
	 * @param timeManager is the accessor to the manager of simulation time.
	 * @return the number of changes that were applied to the environment.
	 */
	def done(timeManager : TimeService) : int

}

