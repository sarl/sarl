package io.sarl.sre.test.framework.exception

import java.util.logging.LogRecord

/**
 * Error is detected in the logged messages.
 *
 * @author <a href="http://www.ciad-lab.fr/stephane_galland">St&eacute;phane Galland</a>
 * @version sre.tests.api 0.13.0 20230919-093058
 * @mavengroupid io.sarl.sre
 * @mavenartifactid sre.tests.api
 * @since 0.11
 */
class SreLogException extends Exception {

	val record : LogRecord

	/** Constructor.
	 *
	 * @param cause the cause of the error.
	 */
	new (cause : LogRecord) {
		super(cause.message, cause.thrown)
		this.record = cause
	}

	/** Replies the log record that is the cause of this exception.
	 *
	 * @return the log record.
	 */
	def getLogRecord : LogRecord {
		this.record
	}

}
