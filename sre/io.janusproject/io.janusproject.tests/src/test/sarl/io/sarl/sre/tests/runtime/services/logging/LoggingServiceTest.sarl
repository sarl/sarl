package io.sarl.sre.tests.runtime.services.logging

import org.junit.Test
import io.sarl.sre.tests.runtime.services.logging.mocks.VerboseAgent
import io.sarl.sre.tests.testutils.AbstractSreRunTest
import java.util.logging.Level
import java.util.logging.LogRecord

/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
class LoggingServiceTest extends AbstractSreRunTest {

	@Test
	def agentLoggingMessageFormat : void {
		typeof(VerboseAgent).runSre(Level::SEVERE, true, true)
		var record = typeof(LogRecord).getResult(0)
		record.assertNotNull;
		("AGENT-" + bootAgent.toString).assertEquals(record.loggerName)
		"This is a welcome message".assertEquals(record.message)
	}

}
