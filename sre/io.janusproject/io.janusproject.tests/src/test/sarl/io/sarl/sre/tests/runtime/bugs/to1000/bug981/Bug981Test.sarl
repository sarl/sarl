/** Tests for issue #981: Program does not end.
 *
 * <p>See: https://github.com/sarl/sarl/issues/981
 *
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 * @see "https://github.com/sarl/sarl/issues/981"
 */
@ExtendWith(#[
	typeof(ContextInitExtension),
	typeof(JavaVersionCheckExtension),
	typeof(PropertyRestoreExtension),
	typeof(SreRunExtension)
])
@DisplayName("run: Bug #981")
@Tag("sre-run")
@Tag("janus")
class Bug981Test {

	@Test
	@DisplayName("Version 1")
	def runVersion1(extension rc : SreRunContext) : void {
		typeof(Launcher0).runSre
		// Should stop without timeout
	}

	@Test
	@DisplayName("Version 2")
	def runVersion2(extension rc : SreRunContext) : void {
		typeof(Launcher1).runSre
		// Should stop without timeout
	}

}
