/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
@ExtendWith(#[
	typeof(ContextInitExtension),
	typeof(JavaVersionCheckExtension),
	typeof(PropertyRestoreExtension),
	typeof(SreRunExtension)
])
@DisplayName("run: Task failure test")
@Tag("sre-run")
@Tag("janus")
class TaskFailureTest {

	@Test
	@SuppressWarnings("use_reserved_sarl_annotation")
	@PrivateAPI(isCallerOnly = true)
	def failure0(extension rc : SreRunContext) : void {
		typeof(FailureTaskAgent).runSre(LogTrackingMode::SILENT, Constants::NO_TIMEOUT)
		val results = allResults
		results.assertContains("INITIATED", "FINISHED ON ERROR")
	}

}
