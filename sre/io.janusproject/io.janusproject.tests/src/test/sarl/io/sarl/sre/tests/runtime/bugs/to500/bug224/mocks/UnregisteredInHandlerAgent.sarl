package io.sarl.sre.tests.runtime.bugs.to500.bug224.mocks

import io.sarl.core.Behaviors
import io.sarl.core.DefaultContextInteractions
import io.sarl.core.Initialize
import io.sarl.core.Lifecycle
import io.sarl.sre.test.framework.skills.TestingCapacity
import io.sarl.sre.test.framework.skills.TestingSkill

/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 * @see https://github.com/sarl/sarl/issues/224
 */
@SuppressWarnings("potential_field_synchronization_problem")
agent UnregisteredInHandlerAgent {

	uses Behaviors, DefaultContextInteractions, Lifecycle

	var ^behavior : MyBehavior

	uses TestingCapacity

	on Initialize {
		setSkill(new TestingSkill(occurrence))
		this.^behavior = new MyBehavior(this)
		addResult(this.^behavior)
		registerBehavior(this.^behavior)
		emit(new MyEvent)
	}

	on MyEvent {
		unregisterBehavior(this.^behavior)
		killMe
	}

}
