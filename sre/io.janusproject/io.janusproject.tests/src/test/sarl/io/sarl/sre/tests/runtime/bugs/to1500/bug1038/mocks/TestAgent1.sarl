package io.sarl.sre.tests.runtime.bugs.to1500.bug1038.mocks

import io.sarl.core.DefaultContextInteractions
import io.sarl.core.Initialize
import io.sarl.core.InnerContextAccess
import io.sarl.core.Lifecycle
import io.sarl.core.MemberJoined
import io.sarl.core.MemberLeft
import io.sarl.sre.test.framework.skills.TestingCapacity
import io.sarl.sre.test.framework.skills.TestingSkill
import java.util.UUID
import java.util.concurrent.atomic.AtomicBoolean

/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
@SuppressWarnings("all")
agent TestAgent1 {
	
	uses InnerContextAccess, Lifecycle, DefaultContextInteractions
	uses TestingCapacity

	var childId : UUID

	val receivedJoined = new AtomicBoolean(false)
	
	on Initialize {
		setSkill(new TestingSkill(occurrence))
		val cID = innerContext.ID
		val sID = innerContext.defaultSpace.spaceID.ID
		this.childId = UUID::randomUUID
		typeof(TestAgent2).spawnInContextWithID(this.childId, defaultContext, buildAgentInitializationParameters(cID, sID))
	}

	on MemberJoined [occurrence.agentID == this.childId && occurrence.source.spaceID.contextID == innerContext.ID] {
		("participant-joined" + occurrence.agentID).addResult
		this.receivedJoined.set(true)
	}

	on MemberLeft [this.childId == occurrence.agentID] {
		while (!this.receivedJoined.get) {
			Thread::yield
		}
		killMe
	}

}
