package io.sarl.sre.tests.runtime.bugs.to1000.bug609

import io.sarl.sre.test.framework.context.SreRunContext
import io.sarl.sre.test.framework.^extension.PropertyRestoreExtension
import io.sarl.sre.test.framework.^extension.SreRunExtension
import io.sarl.sre.tests.runtime.bugs.to1000.bug609.mocks.TAgent1
import io.sarl.tests.api.extensions.ContextInitExtension
import io.sarl.tests.api.extensions.JavaVersionCheckExtension
import org.junit.jupiter.api.DisplayName
import org.junit.jupiter.api.Tag
import org.junit.jupiter.api.Test
import org.junit.jupiter.api.^extension.ExtendWith

import static org.junit.jupiter.api.Assertions.*

/**
 * Unit test for the issue #609: on Destroy is called two times with killMe.
 * 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 * @see https://github.com/sarl/sarl/issues/609
 */
@ExtendWith(#[
	typeof(ContextInitExtension),
	typeof(JavaVersionCheckExtension),
	typeof(PropertyRestoreExtension),
	typeof(SreRunExtension)
])
@DisplayName("run: Bug #609")
@Tag("sre-run")
@Tag("janus")
class Bug609Test {

	@Test
	def killMeInInit(extension rc : SreRunContext) {
		typeof(TAgent1).runSre
		var r = getAllResultsPerAgent
		assertEquals(1, r.size)
		var l = r.values.get(0)
		assertEquals(1, l.size)
	}

}
