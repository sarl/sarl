package io.sarl.api.naming.tests.name

import io.sarl.api.naming.name.SpaceName
import io.sarl.lang.core.Space
import io.sarl.lang.tests.api.extensions.JavaVersionCheckExtension
import io.sarl.tests.api.extensions.ContextInitExtension
import java.net.URI
import java.util.UUID
import javax.annotation.Nullable
import org.junit.jupiter.api.BeforeEach
import org.junit.jupiter.api.DisplayName
import org.junit.jupiter.api.Tag
import org.junit.jupiter.api.Test
import org.junit.jupiter.api.^extension.ExtendWith

import static extension io.sarl.tests.api.tools.TestMockito.mock
import static extension org.junit.jupiter.api.Assertions.*
import static extension org.mockito.Mockito.*

/** 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
@ExtendWith(#[
	typeof(ContextInitExtension),
	typeof(JavaVersionCheckExtension)
])
@DisplayName("SpaceName")
@Tag("unit")
@Tag("api")
@Tag("api-naming")
class SpaceNameTest {

	@Nullable
	var uri : URI

	@Nullable
	var contextId : UUID

	@Nullable
	var spaceId : UUID

	@Nullable
	var name : SpaceName

	@BeforeEach
	def setUp : void {
		this.uri = URI::create("http://www.sarl.io/001#fragment")
		this.contextId = UUID::randomUUID
		this.spaceId = UUID::randomUUID
		this.name = (new SpaceName(this.uri, this.contextId, this.spaceId) {
		}).spy
	}

	@Test
	@DisplayName("getContextId")
	def getContextId {
		this.contextId.assertSame(this.name.contextId)
	}

	@Test
	@DisplayName("getSpaceId")
	def getSpaceId {
		this.spaceId.assertSame(this.name.spaceId)
	}

	@Test
	@DisplayName("getAssociatedObject - null")
	def getAssociatedObject {
		var ref = this.name.associatedObject
		ref.assertNull
	}

	@Test
	@DisplayName("setAssociatedObject")
	def setAssociatedObject {
		var spc = typeof(Space).mock
		this.name.associatedObject = spc
		var ref = this.name.associatedObject
		spc.assertSame(ref)
	}

}
