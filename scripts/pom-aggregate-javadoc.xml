<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.sarl.tmp</groupId>
  <artifactId>sarl-aggregated-javadoc-root</artifactId>
  <version>0.15.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>API Documentation for SARL</name>
  <properties>
    <sarl.version>0.15.0-SNAPSHOT</sarl.version>
    <java.version>21</java.version>
  </properties>
  <modules>
    <module>sarl-lang</module>
    <module>sarl-sdk</module>
    <module>sarl-apputils</module>
    <module>sarl-sre</module>
  </modules>
  <build>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-webdav-jackrabbit</artifactId>
        <version>3.5.3</version>
      </extension>
    </extensions>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-javadoc-plugin</artifactId>
          <version>3.11.2</version>
          <configuration>
            <version>${java.version}</version>
            <doclint>all,-missing</doclint>
            <failOnError>false</failOnError>
            <useStandardDocletOptions>false</useStandardDocletOptions>
            <doclet>io.sarl.docs.doclet2.Doclet</doclet>
            <docletArtifacts>
              <docletArtifact>
                <groupId>io.sarl.docs</groupId>
                <artifactId>docs.doclet</artifactId>
                <version>${sarl.version}</version>
                <classifier>full-dependencies</classifier>
              </docletArtifact>
            </docletArtifacts>
            <docencoding>UTF-8</docencoding>
            <encoding>UTF-8</encoding>
            <charset>UTF-8</charset>
            <show>protected</show>
            <detectJavaApiLink>true</detectJavaApiLink>
            <docfilessubdirs>true</docfilessubdirs>
            <excludePackageNames />
            <use>false</use>
            <bottom>&lt;small&gt;Copyright &amp;copy; ${sarl.inception.year}-${sarl.last.year} ${sarl.copyrighters}.</bottom>
		<groups>
		    <group>
		      <title>SARL Standard Development Kit - SDK</title>
		      <packages>io.sarl.api*:io.sarl.lang.core*</packages>
		    </group>
		    <group>
		      <title>SARL Runtime Environment - Janus</title>
		      <packages>io.sarl.sre*</packages>
		    </group>
		    <group>
		      <title>SARL Compiler</title>
		      <packages>
		      io.sarl.lang:io.sarl.lang.async*:io.sarl.lang.bugfixes*:io.sarl.lang.codebuilder*:io.sarl.lang.compiler*:io.sarl.lang.controlflow*:io.sarl.lang.documentation*:io.sarl.lang.extralanguage*:io.sarl.lang.formatting2*:io.sarl.lang.interpreter*:io.sarl.lang.jvmmodel*:io.sarl.lang.macro*:io.sarl.lang.parser*:io.sarl.lang.pythongenerator*io.sarl.lang.sarl*:io.sarl.lang.scoping*:io.sarl.lang.serializer*:io.sarl.lang.services*:io.sarl.lang.typesystem*:io.sarl.lang.util*:io.sarl.lang.validation*</packages>
		    </group>
		    <group>
		      <title>Base SARL-based Application API</title>
		      <packages>io.sarl.apputils*</packages>
		    </group>
		  </groups>
            <tags>
              <tag>
                <name>mavengroupid</name>
                <placement>pt</placement>
                <head>Maven Group Id:</head>
              </tag>
              <tag>
                <name>mavenartifactid</name>
                <placement>pt</placement>
                <head>Maven Artifact Id:</head>
              </tag>
              <tag>
                <name>ExcludeFromApidoc</name>
                <placement>X</placement>
              </tag>
              <tag>
                <name>generated</name>
                <placement>a</placement>
                <head>Generated</head>
              </tag>
              <tag>
                <name>model</name>
                <placement>a</placement>
                <head>Model</head>
              </tag>
              <tag>
                <name>ordered</name>
                <placement>a</placement>
                <head>Ordered</head>
              </tag>
            </tags>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
        <version>1.2.1</version>
        <executions>
          <execution>
            <id>read-properties</id>
            <phase>initialize</phase>
            <goals>
              <goal>read-project-properties</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <urls>
            <url>classpath:/sarl-lang.properties</url>
          </urls>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>io.sarl.bom</groupId>
            <artifactId>sarl-properties</artifactId>
            <version>${project.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.sarl.bom</groupId>
        <artifactId>sarl-lang-bom</artifactId>
        <version>${project.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>io.sarl.bom</groupId>
        <artifactId>sarl-compiler-bom</artifactId>
        <version>${project.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>
